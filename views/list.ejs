<%- include('header'); -%>
<body>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <%newListItems.forEach(function(items){%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value=<%=items._id %> onChange="this.form.submit()">
                    <p><%=items.item %></p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle %>">
            </form>
            
        <%})%>
    

        <form class="item" action="/" method="post"> 
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" type="text">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
